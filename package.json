{
  "name": "jmemo",
  "version": "0.1.0",
  "private": true,
  "description": "Refactoring project for jwmemo",
  "type": "module",
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=20.10.0"
  },
  "scripts": {
    "dev": "vite",
    "server:dev": "node --watch --env-file=.env server/index.mjs",
    "server:start": "node --env-file=.env server/index.mjs",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:smoke": "vitest run tests/smoke",
    "test:integration": "vitest run tests/integration",
    "test:unit": "vitest run tests/unit",
    "test:report": "vitest run --reporter=junit --outputFile=reports/junit.xml",
    "test:e2e": "playwright test",
    "env:check": "node --env-file=.env scripts/check-env.mjs",
    "db:ping": "node --env-file=.env scripts/db-ping.mjs",
    "db:shell": "node --env-file=.env scripts/db-shell.mjs",
    "integration:smoke": "node --env-file=.env scripts/integration-smoke.mjs",
    "release:smoke": "node --env-file=.env scripts/release-smoke.mjs",
    "release:counts": "node --env-file=.env scripts/cutover-count-check.mjs",
    "cutover:run": "node --env-file=.env scripts/cutover-runner.mjs",
    "migrate:reset": "node --env-file=.env scripts/migrate-reset.mjs",
    "lint": "eslint .",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "express": "^5.2.1",
    "lithent": "file:../lithent",
    "monaco-editor": "^0.52.2",
    "monaco-vim": "^0.4.0",
    "mongodb": "^7.1.0",
    "mongoose": "^9.2.1",
    "multer": "^2.0.2"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@tailwindcss/postcss": "^4.2.0",
    "@types/markdown-it": "^14.1.2",
    "@types/node": "^22.13.9",
    "autoprefixer": "^10.4.24",
    "eslint": "^9.21.0",
    "jsdom": "^28.1.0",
    "markdown-it": "^14.1.1",
    "mongosh": "^2.7.0",
    "postcss": "^8.5.6",
    "prettier": "^3.5.2",
    "supertest": "^7.2.2",
    "tailwindcss": "^4.2.0",
    "typescript": "^5.8.2",
    "vite": "^6.2.1",
    "vitest": "^3.0.8"
  }
}
